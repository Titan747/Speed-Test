@model SpeedTickets.Models.tblMovy

@{
	ViewBag.Title = "AddMovie";
}

<h2 style="font-weight:bold">Add Movie</h2>

<hr />

<div style="font-weight:bold">@Html.ActionLink("View Movies", "Index", "Movies", new { @class = "btn btn-info" })</div>

<br />

@using (Html.BeginForm())
{
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<table class="table table-hover">
					<tr>
						<td><label>Movie</label></td>
						<td>@Html.TextBoxFor(obj => obj.Movie)</td>
					</tr>
					<tr>
						<td><label>Description</label></td>
						<td>@Html.TextBoxFor(obj => obj.Description)</td>
					</tr>
					<tr>
						<td><label>Movie Type</label></td>
						<td>@Html.TextBoxFor(obj => obj.MovieType)</td>
					</tr>
				</table>
			</div>
			<input type="submit" name="name" value="Save Movie" class="btn btn-success" />&ensp;
			<input type="button" name="name" value="Reset" class="btn btn-primary" />
		</div>
	</div>
}